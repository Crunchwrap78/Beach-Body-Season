<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Photo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= photo.photo_url %></td>
        <td><%= photo.description %></td>
        <td><%= link_to 'Show', photo, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Photo', new_photo_path, class: "btn btn-info" %>
<%end%>
