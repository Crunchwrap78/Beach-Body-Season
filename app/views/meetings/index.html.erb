<p id="notice"><%= notice %></p>
<% if current_user%>
<h1>Workout/Event Schedule</h1>

<div id="events_calendar">
  <%= render :partial => "calendar", locals: {events: @meetings} %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.start_time.strftime("%Y-%m-%d %l:%M %p") %></td>
        <td><%= link_to 'Show', meeting, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_meeting_path(meeting), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path, class: "btn btn-info" %>
<%end%>
